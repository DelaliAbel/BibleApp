            </TabItem>
            <TabItem Header="Semeur"/>
            <TabItem Header="Segond 21"/>
            <TabItem Header="Martin"/>
            <TabItem Header="Darby"/>
            <TabItem Header="Ostervald"/>
            <TabItem Header="King James"/>
        </TabControl>
        <!--#endregion-->
        
        <!--#region Rigth TabControl-->
        <TabControl TabStripPlacement="Bottom" Grid.Row="2" Grid.Column="4">
            <TabItem Header="References">
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem Header="Versets-marqués" />
            <TabItem Header="Recherche" />
        </TabControl>
        <!--#endregion-->
        
        <!--#region Bottom TabControl-->
        <Grid Grid.Row="4" Grid.ColumnSpan="4" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl TabStripPlacement="Bottom" Grid.Row="2" Grid.ColumnSpan="2">
                <TabItem Header="Notes">
                    <Label Content="Content goes here..." />
                </TabItem>
                <TabItem Header="Details" />
            </TabControl>

        </Grid>
        <!--#endregion-->
    </Grid>
