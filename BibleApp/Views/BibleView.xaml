                    <Path Fill="Gray" Stretch="Uniform" Height="15" Margin="0 0 30 0" Data="{StaticResource Note_icon}"/>
                </StackPanel>-->

            </Grid>
            <!--#regionTab-->

            <!--Contenu du View-->
            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                <ContentControl Content="{Binding PageContent}"/>

            </Grid>
        </Grid>
        <!--#endregion-->

        <!--Triple Views-->
        <!--#region Triple Views-->
        <Grid Grid.Row="2" Grid.Column="2" Visibility="Collapsed" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Top Menu du Triple view-->
            <Grid Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--#region Tab Top Left Menu-->
                <Grid Grid.Column="0" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--Titre-->
                    <ComboBox Name="TripleV1" Grid.Column="0" Margin="15 10" Width="60" HorizontalAlignment="Left"/>
                    <TextBlock Text="Génèse 1" Margin="25 0" Grid.Column="2" VerticalAlignment="Center" FontSize="23" Foreground="Gray"/>
                </Grid>
                <!--#endregion-->

                <!--#region Tab Top Center Menu-->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--Titre-->
                    <ComboBox Name="tripleV2" Grid.Column="0" Margin="15 10" Width="60" HorizontalAlignment="Left"/>
                    <TextBlock Text="Génèse 1" Margin="15 0 0 0" Grid.Column="1" FontSize="26" Foreground="Gray"/>
                </Grid>
                <!--#endregion-->

                <!--#region Tab Top Right Menu-->
                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--Titre-->
                    <ComboBox Name="tripleV3" Grid.Column="0" Margin="15 10" Width="60" HorizontalAlignment="Left"/>
                    <TextBlock Text="Génèse 1" Margin="15 0 0 0" Grid.Column="1" FontSize="26" Foreground="Gray"/>
                </Grid>
                <!--#endregion-->

            </Grid>
        </Grid>
        <!--#endregion-->

