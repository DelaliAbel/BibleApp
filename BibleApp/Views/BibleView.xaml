<UserControl x:Class="BibleApp.Views.BibleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibleApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#f7f7f7">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        
        <!--#region GridSplitter-->
        <Rectangle Grid.Column="1" Grid.Row="0" Grid.RowSpan="5" Width="1" Fill="LightGray" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" Width="4" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="3" Grid.ColumnSpan="5" Height="4" HorizontalAlignment="Stretch" />
        <!--#endregion-->

        <!--#region Top menu-->
        <DockPanel Grid.Column="2" Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top" FontSize="15" Background="white" VerticalAlignment="Center" >
                <MenuItem Header="_Fichier" Background="white">
                    <MenuItem Header="Créer une note" />
                    <Separator />
                    <MenuItem Header="Ouvrir une note"/>
                    <MenuItem Header="Enregistrer"/>
                    <MenuItem Header="A propos"/>
                    <MenuItem Header="Quitter"/>
                </MenuItem>
                <MenuItem Header="_Afficher" Background="white">
                    <MenuItem Header="Réferences" />
                    <MenuItem Header="Versets marqués" />
                    <MenuItem Header="Détails" />
                    <MenuItem Header="Notes" />
                </MenuItem>
                <MenuItem Header="_Inserer" Background="white">
                    <MenuItem Header="Cut" />
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Paste" />
                </MenuItem>
                <MenuItem Header="_Aide" Background="white">
                    <MenuItem Header="Cut" />
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Paste" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--#endregion-->

        <Label Content="Lire la Bible" Foreground="#535353" FontFamily="Arial" FontSize="22" Margin="20 10 10 0" FontWeight="SemiBold"/>

        <!--#region menu lattéral gauche-->
        <StackPanel Grid.RowSpan="5" Grid.Row="2" Margin="20 20 10 0" Background="#FAF5F5F5">
            <RadioButton Content="Ancien Testament" IsChecked="True" Height="30" Style="{StaticResource LivresRadioBtn}"/>
            <RadioButton Content="Nouveau Testament" Height="30" Style="{StaticResource LivresRadioBtn}"/>
            <Separator Height="1" Background="DodgerBlue"/>
            <StackPanel >

            </StackPanel>
        </StackPanel>
        <!--#endregion -->
        
        <!--#region Center TabControl-->
        <TabControl Grid.Row="2" Grid.Column="2" BorderThickness="0" Background="White">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource TabCustom}"/>
            </TabControl.Resources>
            <TabItem Header="Louis Segond" Name="Louis">
