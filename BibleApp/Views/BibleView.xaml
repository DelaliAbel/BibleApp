        <!--Rigth TabControl-->
        <!--#region Rigth TabControl-->
        <TabControl TabStripPlacement="Bottom" Visibility="Collapsed" Grid.Row="2" Grid.Column="4">
            <TabItem Header="References">
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem Header="Versets-marqués" />
            <TabItem Header="Recherche" />
        </TabControl>
        <!--#endregion-->

        <!--Bottom TabControl-->
        <!--#region Bottom TabControl-->
        <Grid Grid.Row="4" Grid.ColumnSpan="4" Visibility="Collapsed" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl TabStripPlacement="Bottom" Grid.Row="2" Grid.ColumnSpan="2">
                <TabItem Header="Notes">
                    <Label Content="Content goes here..." />
                </TabItem>
                <TabItem Header="Details" />
            </TabControl>

