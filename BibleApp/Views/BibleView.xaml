        <!--#endregion-->

        <Label Content="Lire la Bible" Foreground="#535353" FontFamily="Arial" FontSize="22" Margin="20 10 10 0" FontWeight="SemiBold"/>

        <!--#region menu lattéral gauche-->
        <Grid Grid.RowSpan="5" Grid.Row="2" Width="250" Background="#FAF5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="0 0 0 0" >
                <ItemsControl  ItemsSource="{Binding Testaments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Background="{x:Null}">
                                <RadioButton Style="{StaticResource LivresRadioBtn}" 
                                             Height="30"
                                         Content="{Binding DisplayName}" 
                                         Command="{Binding Command}" 
                                         IsChecked="{Binding IsChecked}"
                                         GroupName="Testament"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Separator Grid.Row="1" Height="1" Background="DodgerBlue"/>

            <ScrollViewer Grid.Row="2" Margin="0 0 0 0" >
                <StackPanel>
                    <ItemsControl  ItemsSource="{Binding ListOfBooks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="{x:Null}">
                                    <RadioButton Style="{StaticResource MenuRadioBtn2}" 
                                         Content="{Binding DisplayName}" 
                                         Command="{Binding Command}" 
                                         IsChecked="{Binding IsChecked}"
                                         GroupName="TestamentBook"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            <Rectangle Grid.Row="3"/>
        </Grid>
        <!--#endregion -->

        <!--Content Views-->
        <!--#region Views-->
        <Grid Grid.Row="2" Grid.Column="2" Visibility="Visible" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--#regionTab Top Menu-->
            <Grid Grid.ColumnSpan="2" Visibility="Collapsed" Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Edite Buttons-->

