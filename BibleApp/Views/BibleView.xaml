                    <Path Fill="Gray" Stretch="Uniform" Data="{StaticResource Align_justify_icon}" Margin="15 0 0 0"/>
                    <Path Fill="Gray" Stretch="Uniform" Data="{StaticResource Align_right_icon}" Margin="15 0 0 0"/>

                    --><!--Action Buttons-->
                    <!--<Path Fill="Gold" Stretch="Uniform" Height="15" Margin="15 0 0 0" Data="{StaticResource StarBorder_icon}"/>--><!--

                    <Path Fill="#629bfe" Stretch="Uniform" Height="15" Margin="15 0 0 0" Data="{StaticResource AudioIcon}"/>
                    <Path Fill="Gray" Stretch="Uniform" Height="15" Margin="15 0 0 0" Data="{StaticResource Note_icon}"/>

                    --><!--<Path Fill="Gray" Stretch="Uniform" Height="15" Margin="15 0 0 0" Data="{StaticResource TripleColumns_icon}"/>--><!--

                </StackPanel>

                <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
