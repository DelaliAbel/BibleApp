                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Titre-->
                        <TextBlock Text="Génèse 1" Margin="15 0 0 0" Grid.Column="0" FontSize="26" DockPanel.Dock="Left" Foreground="Gray"/>
